/**
 * Implements hook_token_info_alter().
 *
 * This adds the missing token info for automatically detected tokens.
 */
function nfafmis_token_info_alter(&$info) {
  $entities = \Drupal::service('entity_field.manager')->getFieldMap();
  foreach ($entities as $entity_key => $entity) {
    if ($entity_key !== 'node') {
      continue;
    }

    foreach ($entity as $field_key => $field) {
      if ($field['type'] !== 'yearonly') {
        continue;
      }

      $token_key = sprintf('node-%s', $field_key);
      $info['tokens'][$token_key]['value'] = [
        'name' => t('Year Only'),
        'description' => t('Year only value.'),
      ];
    }
  }
}

/**
 * Generate invoice number dynamically.
 */
function generate_inoice_number() {
  $default_timezone = new \DateTimeZone(date_default_timezone_get());
  $date = new \DateTime('now', $default_timezone);
  $query = \Drupal::entityQuery('node')
    ->condition('type', 'invoice')
    ->sort('created');
  $invoice_id = $query->execute();
  $invoice_id = end($invoice_id);
  if ($invoice_id) {
    $invoice = \Drupal::entityTypeManager()->getStorage('node')->load($invoice_id);
    $invoice_serial = $invoice->get('field_invoice_serial')->value;
    if ($invoice_serial) {
      $invoice_serial += 1;
      $field_invoice_number = $date->format('dmY') . '-' . sprintf("%04d", $invoice_serial);
      return $field_invoice_number;
    }
    return $date->format('dmY') . '-' . sprintf("%04d", 1);
  }
  // Initial invoice_number like 0001.
  return $date->format('dmY') . '-' . sprintf("%04d", 1);
}
